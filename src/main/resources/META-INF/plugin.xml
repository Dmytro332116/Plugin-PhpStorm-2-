<idea-plugin>
    <id>com.localblocks.plugin</id>
    <name>Code Drafts</name>
    <vendor>Local</vendor>
    <depends>com.intellij.modules.phpstorm</depends>
    <description>
        Personal code notebook for PhpStorm. Save your implementation notes (Twig, preprocess, JS) in one place and reuse them quickly.
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Drafts"
                    anchor="right"
                    factoryClass="com.localblocks.toolwindow.DraftsToolWindowFactory"
                    icon="/icons/pluginIcon.svg"/>
    </extensions>
</idea-plugin>
